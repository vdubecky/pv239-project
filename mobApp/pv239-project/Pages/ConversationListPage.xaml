<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:pv239_project.Resources.i18n"
             xmlns:models="clr-namespace:pv239_project.Models"
             xmlns:vm="clr-namespace:pv239_project.ViewModels"
             x:Name="Root"
             x:DataType="vm:ConversationListViewModel"
             Title="{x:Static strings:AppTexts.ConversationListPage_PageLabel}"
             x:Class="pv239_project.Pages.ConversationListPage">
  <ContentPage.Content>
    <VerticalStackLayout Padding="10" Spacing="15">
      <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
          <DataTemplate x:DataType="{x:Type models:ConversationList}">
            <Border StrokeThickness="0" 
                    StrokeShape="RoundRectangle 12" 
                    Margin="0, 0, 0, 10">
              <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, 
                    Path=BindingContext.GoToDetailCommand}"
                                      CommandParameter="{Binding ConversationId}" />
              </Border.GestureRecognizers>

              <Grid ColumnDefinitions="Auto, Auto"
                    RowDefinitions="Auto, Auto"
                    Padding="10" 
                    BackgroundColor="BlueViolet">
  
                <Border Grid.Column="0"
                        Grid.RowSpan="2"
                        HeightRequest="45"
                        WidthRequest="45"
                        StrokeShape="Ellipse"
                        Margin="0, 0, 8, 0">
                  <Image />
                </Border>

                <Label Text="{Binding Title}"
                       FontSize="17"
                       TextColor="White"
                       FontAttributes="Bold"
                       Grid.Row="0"
                       Grid.Column="1"/>
                  
                <Label Text="{Binding LastMessage}"
                       FontSize="14"
                       TextColor="Black"
                       Grid.Row="1"
                       Grid.Column="1"/>

                <Label Text="{Binding LastActivity, StringFormat='{0:MM/dd/yyyy HH:mm}'}"
                       FontSize="12"
                       TextColor="Black"
                       Grid.Row="1"
                       Grid.Column="1"
                       VerticalOptions="End"
                       HorizontalOptions="End" />
              </Grid>
            </Border>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
    </VerticalStackLayout>
  </ContentPage.Content>
</ContentPage>