<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               Size="300, 240"
               xmlns:vm="clr-namespace:pv239_project.ViewModels"
               x:DataType="vm:UploadProfilePicturePopupViewModel"
               x:Class="pv239_project.Popups.UploadProfilePicturePopup">
  <VerticalStackLayout Padding="20" Spacing="10">
    <Button Text="Pick a picture" Command="{Binding PickPictureCommand}" />

    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
      <Button Text="Cancel" Command="{Binding CloseCommand}" />
      <Button Text="Submit" Command="{Binding SubmitCommand}" />
    </HorizontalStackLayout>
  </VerticalStackLayout>
</toolkit:Popup>