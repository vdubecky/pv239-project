<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:pv239_project.Models"
             xmlns:vm="clr-namespace:pv239_project.ViewModels"
             x:Name="Root"
             x:DataType="vm:LoginPageViewModel"
             x:Class="pv239_project.Pages.LoginPage">
  <ContentPage.Content>
    <Grid RowDefinitions="*, Auto">
      <VerticalStackLayout Grid.Row="0" Spacing="40" VerticalOptions="Center">
        <Label FontSize="56" HorizontalTextAlignment="Center">Welcome</Label>
        <Label Text="Please login or create a new account"
               FontSize="24"
               HorizontalTextAlignment="Center"
               LineBreakMode="WordWrap"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Start" />
      </VerticalStackLayout>
      <VerticalStackLayout Padding="20" Spacing="10" Grid.Row="1">
        <Entry Text="{Binding Email}" Placeholder="Email" />
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Command="{Binding SubmitCommand}" />
        <Button Text="Create new account" Command="{Binding GoToCreateUserCommand}" />
      </VerticalStackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>